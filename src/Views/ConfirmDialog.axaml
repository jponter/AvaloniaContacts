<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaContacts.Views.ConfirmDialog"
        Title="Confirm Delete"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False">

    <StackPanel Margin="20" Spacing="10">
        <TextBlock Text="Are you sure you want to delete this contact?" TextWrapping="Wrap" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Name="YesButton" Content="Yes" Width="80" IsDefault="True"/>
            <Button Name="NoButton" Content="No" Width="80" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
